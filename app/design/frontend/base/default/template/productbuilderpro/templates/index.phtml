<div class="container">
    <div class="row">
        <div class="col-lg-4">
            <h2>
                <span class="glyphicon glyphicon-fire" aria-hidden="true"></span>
                Product Builder Pro
            </h2>
        </div>
        <div class="col-lg-8">
            <h3 class="pull-right">
                <a class="btn btn-primary" href="#/add-group">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    <span>Add Customize Product</span>
                </a>
                <a class="btn btn-primary" href="#/add-layer/0">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    <span>Add New Layer</span>
                </a>
            </h3>
        </div>
    </div>
    <div class="row main-content">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="pbp-group-item" ng-repeat="group in groups">
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <h3 class="panel-title">
                                    <a class="btn btn-sm">{{group.title}}</a>
                                    <div class="pull-right">
                                        <a class="btn btn-danger btn-sm" ng-click="removeGroup(group)">
                                            <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span>
                                        </a>
                                    </div>
                                </h3>
                            </div>
                            <div class="panel-body">
                                <!--<pre>{{group | json}}</pre>-->
                                <div class="row">
                                    <div class="col-md-6">
                                        <pbp-option-collection level="0" option-list="group.layers"></pbp-option-collection>    
                                    </div>
                                    <div class="col-md-6">
                                        <div class="product-design-area" id="pbp_{{group.id}}" style="position: absolute;">
                                            <img src="{{mediaUrl + layer.main_image}}" ng-repeat="layer in layerStack[group.id]"/>
                                            <p>
                                                <pre>{{layerStack | json}}</pre>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>    
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>